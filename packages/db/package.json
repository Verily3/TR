{
  "name": "@tr/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    },
    "./migrate": {
      "types": "./dist/migrate.d.ts",
      "import": "./dist/migrate.js"
    }
  },
  "scripts": {
    "build": "tsc && node ../../scripts/fix-esm-imports.mjs dist",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=.env src/seed.ts && tsx --env-file=.env src/seed-leadershift.ts",
    "db:seed-leadershift": "tsx --env-file=.env src/seed-leadershift.ts",
    "db:seed-all": "tsx --env-file=.env src/seed.ts && tsx --env-file=.env src/seed-leadershift.ts",
    "db:migrate-avatars": "tsx --env-file=.env src/scripts/migrate-avatars.ts",
    "db:seed-production": "tsx --env-file=.env src/seed-production.ts"
  },
  "dependencies": {
    "@tr/shared": "workspace:*",
    "argon2": "^0.41.0",
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
