# API Configuration
API_PORT=3002

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/results_tracking_system

# JWT Secrets — generate with: openssl rand -base64 32 (gives 43+ chars = 256-bit)
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=

# Frontend URL (for CORS) — required in production
WEB_URL=http://localhost:3003

# Environment
NODE_ENV=development

# Admin DB Secret — required to use /api/admin/db/migrate and /api/admin/db/health
# Generate with: openssl rand -hex 32
ADMIN_SECRET=

# Cron Job Secret — required to trigger /api/cron/notifications
# Generate with: openssl rand -hex 32
CRON_SECRET=

# Email (optional — emails silently skipped if not set)
RESEND_API_KEY=

# App URL (used in email links)
APP_URL=http://localhost:3003

# File Storage (optional — defaults to local filesystem)
# STORAGE_PROVIDER=local          # local | s3
# STORAGE_LOCAL_DIR=./uploads     # directory for local storage

# S3 Storage (required when STORAGE_PROVIDER=s3; works with AWS S3, Cloudflare R2, MinIO)
# S3_BUCKET=
# S3_REGION=us-east-1
# S3_ENDPOINT=                    # for R2/MinIO — e.g. https://ACCOUNT.r2.cloudflarestorage.com
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
