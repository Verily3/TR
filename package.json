{
  "name": "results-tracking-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @tr/db db:generate",
    "db:migrate": "pnpm --filter @tr/db db:migrate",
    "db:seed": "pnpm --filter @tr/db db:seed",
    "db:studio": "pnpm --filter @tr/db db:studio",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/api/src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/web/src/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
